@model IEnumerable<Intervention>

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th>Opis</th>
        <th class="text-right">Od</th>
        <th class="text-right">Do</th>
        <th class="text-center">Uredi</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.ShortDescription</td>
    <td class="text-right">@item.From</td>
    <td class="text-right">@item.To</td>
    <td class="text-center">
        <form asp-action="Delete" method="post">
            <a asp-action="EditIntervention" class="btn btn-sm btn-warning"
               asp-route-Id="@item.Id">
                Edit
            </a>
            <input type="hidden" name="Id" value="@item.Id" />
            <button type="submit" class="btn btn-danger btn-sm">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>
<div class="text-center">
    <a asp-action="CreateIntervention" class="btn btn-primary">Dodaj intervencijo</a>
</div>