@model IEnumerable<Duty>

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">Od</th>
        <th class="text-right">Do</th>
        <th class="text-center">Izpiši</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.From</td>
            <td class="text-right">@item.To</td>
            <td class="text-center">
                <form asp-action="Report" method="post">
                    <input type="hidden" name="Id" value="@item.Id" />
                    @if (item.To <= DateTime.Now)
                    {
                        <button type="submit" class="btn btn-primary btn-sm">Poročilo</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary btn-sm" disabled>Poročilo</button>
                    }
                </form>
            </td>
        </tr>
    }
</table>